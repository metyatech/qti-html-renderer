{
  "name": "qti-html-renderer",
  "version": "0.1.0",
  "description": "Reusable QTI 3.0 assessment item HTML rendering utilities.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metyatech/qti-html-renderer.git"
  },
  "homepage": "https://github.com/metyatech/qti-html-renderer",
  "bugs": {
    "url": "https://github.com/metyatech/qti-html-renderer/issues"
  },
  "keywords": [
    "qti",
    "qti3",
    "qti-3",
    "html",
    "renderer",
    "education"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node --test",
    "prepare": "npm run build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint && npm run typecheck && npm run test"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.8",
    "qti-xml-core": "git+https://github.com/metyatech/qti-xml-core.git"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jsdom": "^24.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5",
    "typescript-eslint": "^8.56.0"
  }
}
